---
import LinkButton from "../buttons/LinkButton.astro";

const { url, title, description, tags, date } = Astro.props;
console.log(Astro.props);
---

<article class="card">
  <img
    class="image"
    src="https://th.bing.com/th/id/OIG4.hb6x6NsHBTvbDGaD13Ua"
    alt="Opis obrazka"
  />
  <div class="content">
    <div class="topSection">
      <h2>{title}</h2>
      <p class="date">{date}</p>
      <hr class="divider" />
      <p class="description">{description}</p>
    </div>
    <div class="bottomSection">
      <div class="tags">
        {tags.map((tag: string) => <span class="tag">{tag}</span>)}
      </div>
      <LinkButton url={url} text="Czytaj" />
    </div>
  </div>
</article>

<style>
  .card {
    display: flex;
    background-color: #1c1c1c;
    max-width: 980px;
    padding: 16px;
    border-radius: 8px;
    overflow: hidden;
    color: white;
    position: relative;
  }

  .image {
    width: 20%; /* Obrazek zajmuje 40% szerokości karty */
    object-fit: cover;
    border-radius: 8px 0 0 8px;
  }

  .content {
    flex: 1; /* Zajmuje resztę dostępnej szerokości */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0 16px;
  }

  h2 {
    margin: 0;
  }

  .date {
    font-size: 0.875em;
    color: #ccc;
    margin: 4px 0;
  }

  .divider {
    width: 100%;
    height: 1px;
    background-color: #fff;
    border: none;
    margin: 8px 0;
  }

  .description {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    margin: 0 0 8px 0;
  }

  .tags {
    display: flex;
    gap: 8px;
  }

  .tag {
    background-color: #333;
    color: #fff;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.875em;
  }

  .topSection {
    display: flex;
    flex-direction: column;
  }

  .bottomSection {
    justify-content: space-between;
    display: flex;
  }

  /* Styl dla urządzeń mobilnych */
  @media (max-width: 768px) {
    .card {
      flex-direction: column; /* Ustawienie kolumnowe na małych ekranach */
    }

    .image {
      width: 100%; /* Obrazek zajmuje pełną szerokość na mobilnych */
      height: auto;
      border-radius: 8px 8px 0 0;
    }

    .content {
      padding: 16px 0;
    }

    .read-more {
      position: static; /* Przywrócenie normalnego układu przycisku */
      margin-top: 16px;
      align-self: flex-start; /* Wyrównanie do początku na małych ekranach */
    }
  }
</style>
